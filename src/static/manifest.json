{
  "manifest_version": 2,
  "name": "Channelicon - personalize your Slack channel",
  "description": "Set icon to your slack channel, and make more accessible for your favorite channel!",
  "version": "0.1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "applications": {
    "gecko": {
      "strict_min_version": "57.0"
    }
  },
  "page_action": {
    "default_popup": "options.html",
    "default_icon": {
      "128": "images/icon128.png",
      "48": "images/icon48.png",
      "16": "images/icon16.png"
    }
  },
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
  },
  "content_scripts": [{
    "matches": [
      "https://*.slack.com/*"
    ],
    "js": [
      "content_script.js"
    ],
    "run_at": "document_start"
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://*.slack.com/*",
    "webRequest",
    "webRequestBlocking"
  ]
}
